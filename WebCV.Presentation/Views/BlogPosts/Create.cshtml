@using WebCV.Application.Modules.BlogPostsModule.Commands.BlogPostAddCommand
@model BlogPostAddRequest
@{
    ViewData["Title"] = "Create";
}

<!-- BLOG -->
<div class="inside-sec">
    <!-- BIO AND SKILLS -->
    <h5 class="tittle">BLOG</h5>

    <!-- Blog -->
    <section class="blog blog-page padding-20 padding-top-50 padding-bottom-50 ">

        <!-- Blog Post -->

        <form method="post" enctype="multipart/form-data">

            <input name="Image" id="cover-image" type="file" class="img-responsive" accept="image/png, image/gif, image/jpeg" />
            <div class="post-info">
                <div class="post-in p-3">
                    <form>
                        <div class="form-group">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Body"></label>
                            <textarea class="form-control" asp-for="Body" id="body-editor" rows="3"></textarea>
                        </div>
                        <div class="form-group text-right">
                            <a class="btn btn-sm btn-primary me-2" asp-action="index">Cancel</a>
                            <button type="submit" class="btn btn-sm btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>


        </form>

    </section>
</div>

@section addcss {
    <link rel="stylesheet" href="~/libs/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/libs/ckeditor5/ckeditor.min.js"></script>
    <script src="~/libs/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}
