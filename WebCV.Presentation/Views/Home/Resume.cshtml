                <div class="skills">
                    @foreach (var typeGroup in Model)
                    {
                        <h5 class="margin-top-30">@typeGroup.TypeName SKILLS</h5>
                        @foreach (var group in typeGroup.Groups)
                        {
                            <h6>@group.GroupName</h6>
                            var progressBarSkills = group.Skills.Where(skill => skill.Mode == DisplayMode.ProgressBar).ToList();   

                            @foreach (var skill in progressBarSkills)
                            {
                                accordionId++;
                        <div class="panel-group accordion" id="accordion-@accordionId">
